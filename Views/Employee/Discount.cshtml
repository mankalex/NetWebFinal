@model IEnumerable<Discount>

<h2 class="mt-3"><i class="fas fa-list-ul"></i> Product Discounts</h2>
<div class="list-group">
    @foreach (Discount d in Model)
    {
        <a asp-action="Index" asp-route-id="@d.DiscountId" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
        <span>@d.Title - <i style="opacity:.6;">@d.Description</i></span>
        <div>
            <button class="btn btn-secondary">Edit</button>
            <button class="btn btn-danger" style="margin-left: 5px;">Delete</button>
        </div>
    </a>
    }
</div>
