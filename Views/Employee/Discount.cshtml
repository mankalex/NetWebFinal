@model IEnumerable<Discount>

<h2 class="mt-3"><i class="fas fa-list-ul"></i> Product Discounts</h2>
<div class="list-group">
    @foreach (Discount d in Model)
    {
        <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            <span>@d.Title - <i style="opacity:.6;">@d.Description</i></span>
            <div>
                <a asp-action="Edit" asp-route-id="@d.DiscountId"><button class="btn btn-secondary">Edit</button></a>
               <a asp-action="DeleteDiscount" asp-route-id="@d.DiscountId"> <button class="btn btn-danger" style="margin-left: 5px;">Delete</button> </a>
            </div>
        </div>
    }
</div>
<div>
    <a asp-action="Add">
    <button type="submit" class="btn btn-primary">Add Discount</button>
    </a>
</div>
