@model Discount

<h2 class="mt-3"><i class="far fa-address-card"></i> Edit Discount</h2>

<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="@Model.DiscountId">
    <div asp-validation-summary="All"></div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Title">Title</label>
            <input asp-for="@Model.Title" class="form-control" placeholder="Title" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Description">Description</label>
            <input asp-for="@Model.Description" class="form-control" placeholder="Description" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Code">Code</label>
            <input asp-for="@Model.Code" class="form-control" placeholder="Code" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.StartTime">Discount Start</label>
            <input type="date" asp-for="@Model.StartTime" class="form-control" placeholder="StartTime" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.EndTime">Discount End</label>
            <input type="date" asp-for="@Model.EndTime" class="form-control" placeholder="EndTime" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Product</label>
            <select class="form-control" id="ProductId" Name="ProductId">
                @foreach(Product p in ViewBag.Products){
                    @if (p.ProductId == @Model.ProductId){
                        <option selected value="@p.ProductId">@p.ProductName</option>
                    } else {
                        <option value="@p.ProductId">@p.ProductName</option>
                    }
                }
            </select>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.DiscountPercent">Discount Percent</label>
            <input asp-for="@Model.DiscountPercent" class="form-control" placeholder="DiscountPercent" />
        </div>
    </div>
    
    
    <button type="submit" class="btn btn-outline-primary">Save Discount</button>
</form>